<section>
    <div class="gc">
        <div class="d-1-4 r-1-3">
            <h2>Featured Products</h2>
        </div>
        <div class="d-7-13 flex flex-to-right">
            {% if section.settings.cta_link %}
                {% include 'button',
                    url: section.settings.cta_link,
                    text: section.settings.cta_text
                %}
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
                {% if block.settings.featured_product %}
                    {% assign product = block.settings.featured_product %}
                    <div class="span-3">
                        {% include 'card',
                            context: 'product',
                            imageFile: product.featured_image,
                            title: product.title,
                            subtitle: product.first_available_variant.title,
                            cta_url: product.url,
                            cta_text: 'SHOP NOW'
                        %}
                    </div>
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
</section>

{% schema %}
{
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "url",
            "id": "cta_link",
            "label": "Button Link"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "Button Text"
        }
    ],
    "blocks": [
        {
            "name": "Featured Product",
            "type": "Product",
            "settings": [
                {
                    "type": "product",
                    "id": "featured_product",
                    "label": "Featured Product"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Shop",
            "name":"Featured Products"
        }
    ]
}
{% endschema %}